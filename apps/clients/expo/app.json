{
  "expo": {
    "name": "vento",
    "slug": "vento",
    "version": "1.0.0",
    "scheme": "vento",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Vento needs location access to report device position",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Vento needs background location access",
        "NSLocationAlwaysUsageDescription": "Vento needs background location access",
        "NSCameraUsageDescription": "Vento needs camera access to take photos and control the flashlight",
        "NSMicrophoneUsageDescription": "Vento needs microphone access to measure ambient sound levels",
        "NSBluetoothAlwaysUsageDescription": "Vento needs Bluetooth to scan and connect to BLE devices",
        "NSBluetoothPeripheralUsageDescription": "Vento needs Bluetooth to communicate with peripherals",
        "UIBackgroundModes": ["audio", "bluetooth-central", "location"]
      },
      "bundleIdentifier": "com.protofy.vento"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.CAMERA",
        "android.permission.FLASHLIGHT",
        "android.permission.INTERNET",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_ADVERTISE",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.WRITE_SETTINGS",
        "android.permission.SYSTEM_ALERT_WINDOW"
      ],
      "package": "com.protofy.vento"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true,
            "minSdkVersion": 24
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Vento needs camera access to take photos and control the flashlight",
          "microphonePermission": "Vento needs microphone access for audio features",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Vento needs location access to report device position and for BLE scanning",
          "locationAlwaysPermission": "Vento needs background location access",
          "locationWhenInUsePermission": "Vento needs location access to report device position",
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": true
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#ffffff",
          "sounds": []
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Vento needs microphone access to measure ambient sound levels"
        }
      ],
      [
        "react-native-ble-plx",
        {
          "isBackgroundEnabled": true,
          "modes": ["peripheral", "central"],
          "bluetoothAlwaysPermission": "Vento needs Bluetooth to scan and connect to BLE devices"
        }
      ],
      "expo-sensors",
      "expo-secure-store"
    ],
    "extra": {
      "eas": {
        "projectId": "d2c51664-47e8-4b42-9c7f-71dc3b682298"
      }
    }
  }
}
